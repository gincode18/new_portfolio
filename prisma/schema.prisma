generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
}

model Experience {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  position    String
  order       Int    @default(0)
  description String
  time        String
  company     String
}

model Projects {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  order Int    @default(0)
  title String
  desc  String
  img   String
  link  String
}

model Skills {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  skill String
}
